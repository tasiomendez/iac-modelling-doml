metadata:
  _version: '0.0.1'
  
imports:
  - piacere.scoping.*
  
data_types:

  piacere.scoping.data.OSProfile:
    properties:
      computer_name: 
        type: String
      admin_username: 
    	type: String
      admin_password: 
      	type: String
      	
  piacere.scoping.data.StorageProfile:
    properties:
      publisher: 
        type: String
        required: true
      offer: 
        type: String
        required: true
      	
node_types:

  piacere.type.compute.VirtualMachine:
    description: 'Manages a Virtual Machine.'
    // XPECT scope at piacere.scoping.compute.VirtualMachine --> piacere.type.compute.VirtualMachine, piacere.scoping.compute.Node, piacere.scoping.compute.VirtualMachine
    extends: piacere.scoping.compute.VirtualMachine
    properties:
                
      os_profile:
        // XPECT scope at piacere.scoping.data.OSProfile --> piacere.scoping.data.OSProfile, piacere.scoping.data.StorageProfile
        type: piacere.scoping.data.OSProfile
        required: true      
            